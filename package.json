{
  "name": "@reachfive/identity-core",
  "version": "1.6.0",
  "description": "Reach5 Identity Web Core SDK",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ReachFive/identity-web-core-sdk"
  },
  "author": "ReachFive",
  "main": "cjs/main.js",
  "module": "es/main.js",
  "types": "es/main/main.d.ts",
  "scripts": {
    "build": "rollup -c --environment BUILD:production",
    "watch": "rollup -c -w",
    "test": "jest",
    "watch:test": "jest --watch",
    "prepublishOnly": "npm run build",
    "tslint": "tslint --format stylish --project tsconfig.json",
    "tslint-fix": "npm run tslint -- --fix",
    "format": "prettier --write \"src/**/{*.ts,*.tsx}\""
  },
  "dependencies": {
    "lodash": "4.17.13",
    "winchan": "0.2.1"
  },
  "devDependencies": {
    "@types/jest": "23.3.1",
    "@types/lodash": "4.14.132",
    "@types/webappsec-credential-management": "0.5.1",
    "jest": "23.6.0",
    "jest-fetch-mock": "1.6.6",
    "rollup": "1.12.3",
    "rollup-plugin-commonjs": "10.0.0",
    "rollup-plugin-node-resolve": "5.0.0",
    "rollup-plugin-typescript2": "0.21.1",
    "rollup-plugin-uglify": "6.0.2",
    "rollup-watch": "4.3.1",
    "prettier": "1.17.1",
    "ts-jest": "23.10.4",
    "tslib": "1.10.0",
    "tslint": "5.16.0",
    "typescript": "3.4.5"
  },
  "files": [
    "cjs",
    "es",
    "umd"
  ],
  "jest": {
    "testURL": "http://localhost",
    "transform": {
      ".+\\.(j|t)sx?$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx",
      "json"
    ],
    "testMatch": [
      "**/src/**/__tests__/*.spec.ts"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "<rootDir>/tsconfig.test.json",
        "babelConfig": false
      }
    }
  }
}
